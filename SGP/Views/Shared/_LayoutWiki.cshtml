@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/img/favicon/favicon.png">

    <title>Admin | SAIGONPOST</title>

    <!-- Styles -->
    <!-- bootstrap css -->
    <!-- Global CSS -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

    <!-- Font awesome CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">

    <!-- font icon -->
    <link href="~/content/admin/css/elegant-icons-style.css" rel="stylesheet" />

    <!-- bootstrap select-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.0/css/bootstrap-select.min.css">

    <!-- Custom styles -->
    <link href="~/content/admin/css/style.css" rel="stylesheet">
    <link href="~/content/admin/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
      <script src="js/lte-ie7.js"></script>
    <![endif]-->
    <!-- render style -->
    @RenderSection("styles", false)

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/img/favicon/favicon.png">

</head>

<body>
    <!-- container section start -->
    <section id="container" class="">

        <!--header start-->
        <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder tooltips" data-original-title="Toggle Navigation" data-placement="bottom"><i class="icon_menu"></i></div>
            </div>

            <!--logo start-->
            <a href="/home/index" class="logo">SGP WIKI</a>
            <!--logo end-->

            <div class="top-nav notification-row">
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">

                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="username">@User.Identity.Name</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <li>
                                <a href="javascript:document.getElementById('logoutForm').submit()"><i class="icon_key_alt"></i>Thoát</a>
                            </li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!-- notificatoin dropdown end-->
            </div>
        </header>
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()

            }
        }
        @RenderBody()

    </section>
    <!-- container section end -->
    <!-- show process -->
    <img src="/content/reload.gif" id="loading-indicator" style="display:none" />


    <!-- Javascript files -->
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <script src="~/scripts/admin/jquery.scrollTo.min.js" type="text/javascript"></script>
    <script src="~/scripts/admin/jquery.nicescroll.js" type="text/javascript"></script>

    <script src="~/scripts/admin/gritter.js" type="text/javascript"></script>
    <!--custome script for all page-->
    <script src="~/scripts/admin/scripts.js"></script>
    <script src="~/scripts/admin/admincripts.js"></script>
    <!-- ckeditor -->
    <script src="//cdn.ckeditor.com/4.5.7/full/ckeditor.js"></script>
    <!-- bootstrap select js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.0/js/bootstrap-select.min.js"></script>
    <!-- Scripts -->
    @RenderSection("scripts", false)

</body>
</html>
