@model SGP.Models.ReportOnline
@{
    ViewBag.Title = "OnlineReport";
}

<h2>Tạo biên bản Online</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="wrap">
                <p class="form-title">
                </p>
                <form method="post" onsubmit="if(!confirm('Thêm mới biên bản?')){return false;}">
                    <table class="table" >
                        <thead>
                            <tr>
                                <th>Tên cột</th>
                                <th>Giá trị</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Tiêu đề:</td>
                                <td>
                                    <input class="form-control" type="text" id="Title" placeholder="" name="Title" />
                                </td>
                            </tr>
                            <tr>
                                <td>Số phiếu:</td>
                                <td><input class="form-control" type="text" id="IDReceipt" placeholder="" name="IDReceipt" /></td>
                            </tr>
                            <tr>
                                <td> Nội dung:</td>
                                <td><input class="form-control" type="text" id="DetailContent" placeholder="" name="DetailContent" /></td>
                            </tr>
                            <tr>
                                <td>Người lập:</td>
                                <td><input class="form-control" type="text" id="CreateName" placeholder="" name="CreateName" /></td>
                            </tr>
                            <tr>
                                <td>Ngày lập:</td>
                                <td>

                                    <div class='input-group date' id='CreateDate'>
                                        <input class="form-control" type='text' class="form-control" name="CreateDate" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td> Lỗi:</td>
                                    <td>
                                        <select id="select" name="select">
                                            <option value="1">Mất hàng</option>
                                            <option value="2">Vỡ hàng</option>
                                            <option value="3">Móp hàng</option>
                                            <option value="4">Nứt hàng</option>
                                        </select>
                                    </td>
                            </tr>
                            <tr>
                                <td> Lỗi khác <input checked="checked" type="checkbox" id="CheckFault" name="CheckFault" value="false" />
                                </td>
                                <td>
                                    <input class="form-control" type="text" id="Fault" disabled="" placeholder="" name="Fault" />
                                </td>
                            </tr>
                            <tr>
                                <td>Trạng thái:</td>
                                <td><input class="form-control" type="text" id="Status" placeholder="" name="Status" /></td>
                            </tr>
                            <tr>
                                <input type="submit" value="Tạo biên bản" class="btn btn-success btn-sm" />
                            </tr>
                        </tbody>
                    </table>


                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.js"></script>
<script src="//cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/e8bddc60e73c1ec2475f827be36e1957af72e2ea/src/js/bootstrap-datetimepicker.js"></script>
<!-- FastClick -->
<script src="../Scripts/vendors/fastclick/lib/fastclick.js"></script>
<script src="../Scripts/vendors/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('#CreateDate').datetimepicker({ format: 'DD/MM/YYYY HH:mm' });
    });

    $('#CheckFault').change(function () {
        $("#Fault").prop("disabled", !$(this).is(':checked'));
        if ($(this).attr('checked')) {
            $(this).val('true')
        } else {
            $(this).val('false')
        }
    });
</script>


