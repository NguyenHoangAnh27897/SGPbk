@{
    ViewBag.Title = "Index";
}

<h2>Danh sách chi tiết số phiếu chưa phát được</h2>
<div>
    <div class="container">
        <div class="row">
            <form method="get" action="" id="formreport">
                <div class='col-sm-3'>
                    <div class="form-group">
                        From date
                        <div class='input-group date' id='dtpfromdate'>
                            <input type='text' class="form-control" id="fdate" name="FromDate" value="@ViewBag.FromDate" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-sm-3">
                    To date
                    <div class='input-group date' id='dtptodate'>
                        <input type='text' class="form-control" name="ToDate" id="tdate" value="@ViewBag.ToDate" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>

                <div class="col-sm-1">
                    <div class="select2-selection--single">
                        </br>
                        Chọn khu vực
                        <select name="ZoneID">
                            <option value="KV1">KV1</option>
                            <option value="KV2">KV2</option>
                            <option value="KV3">KV3</option>
                            <option value="KV3">KV4</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-2">
                    </br>
                    <button type="button" class="btn btn-primary" onclick="runReport(1)">Excel chưa phát</button>
                </div>

                <div class="col-sm-2">
                    </br>
                    <button type="button" class="btn btn-primary" onclick="runReport(2)">Excel chưa xử lý</button>

                </div>

            </form>

        </div>
    </div>
</div>
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />

@section scripts{
    <script src="../Scripts/vendors/Chart.js/dist/Chart.min.js"></script>
    <script type="text/javascript">

        $(function () {
            $('#dtpfromdate').datetimepicker({
                format: 'DD/MM/YYYY'
            });
        });
        $(function () {
            $('#dtptodate').datetimepicker({
                format: 'DD/MM/YYYY'
            });
        });
        function runReport(type) {

            var action = "";

            if (type == 1) {
                $("#formreport").attr("action", "/Export/ExcelNotDeliveryDetails");
            }
            else if (type == 2) {
                $("#formreport").attr("action", "/Export/ExcelNotMailerDetails");
            }

            $("#formreport").submit();

        }
    </script>
}





